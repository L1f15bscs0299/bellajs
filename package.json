{
  "version": "7.0.5",
  "name": "bellajs",
  "description": "A useful helper for any javascript program",
  "homepage": "https://www.npmjs.com/package/bellajs",
  "repository": {
    "type": "git",
    "url": "https://github.com/ndaidong/bellajs"
  },
  "author": "@ndaidong",
  "main": "./dist/bella.js",
  "module": "./src/main",
  "jsnext:main": "./src/main",
  "browser": "./dist/bella.min.js",
  "engines": {
    "node": ">= 6.0"
  },
  "scripts": {
    "lint": "eslint src tests",
    "nsp": "nsp check --output checkstyle",
    "tape": "nyc babel-node node_modules/.bin/tape test/start.js | tap-spec",
    "report": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "pretest": "npm run lint && npm run nsp",
    "test": "npm run tape",
    "posttest": "CODECOV_TOKEN=6d2a537d-3c51-4661-b60e-e3f080edc1b8 npm run report",
    "start": "babel-node src/main",
    "build": "gccmin -e src/main.js -n bella -o dist -p package.json",
    "reset": "node reset"
  },
  "devDependencies": {
    "babel-cli": "6.x.x",
    "babel-plugin-transform-remove-strict-mode": "0.x.x",
    "babel-preset-env": "1.x.x",
    "codecov": "2.x.x",
    "eslint": "4.x.x",
    "eslint-config-ggc": "1.x.x",
    "gcc-min": "5.x.x",
    "is": "3.x.x",
    "jsdom": "11.x.x",
    "jsdom-global": "3.x.x",
    "nsp": "2.x.x",
    "nyc": "11.x.x",
    "tap-spec": "4.x.x",
    "tape": "4.x.x"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "> 1%"
            ]
          }
        }
      ]
    ],
    "plugins": [
      [
        "transform-remove-strict-mode"
      ]
    ]
  },
  "keywords": [
    "detection",
    "manipulation",
    "templating",
    "utilities"
  ],
  "license": "MIT"
}
